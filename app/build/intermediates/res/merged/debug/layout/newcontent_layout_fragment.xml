<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_newcontent_ptr_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="@null"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderTextColor="@color/ptr_font_color"
        >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <ImageView
        android:id="@+id/fragment_newcontent_loading_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:clickable="true"
        android:src="@drawable/ic_prompt_loading"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/fragment_newcontent_net_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone"
        android:background="@color/top_font_color">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:src="@drawable/netoff"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/fragment_newcontent_none"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        android:src="@drawable/content_none"
        />
</RelativeLayout>
