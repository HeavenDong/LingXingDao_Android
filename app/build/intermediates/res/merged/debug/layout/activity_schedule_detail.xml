<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/left_background_color">
    <!-- title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/main_color"
        android:orientation="horizontal" >
        <RelativeLayout
            android:id="@+id/scheduledetail_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_goback" />

        </RelativeLayout>
        <TextView
            android:id="@+id/channel_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/schedule_detail"
            android:textColor="@color/top_font_color"
            android:textSize="16sp" />
        <TextView
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/title_right"
            android:textColor="@color/top_font_color"
            android:textSize="20sp"
            android:layout_marginRight="3dp"
            />
    </LinearLayout>
    <!-- 以下页面的内容-->
    <LinearLayout
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
            android:id="@+id/scheduledetail_teacher_head"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:scaleType="fitXY"
            app:riv_oval="true"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">
                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/scheduledetail_title"
                    android:textColor="@color/subscripte_green_color"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/need_color"
                    />
                <TextView
                    android:layout_marginLeft="1dp"
                    android:textSize="14sp"
                    android:id="@+id/scheduledetail__price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/need_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="11dp">
                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/scheduledetail_datas"
                    android:textColor="@color/subscripte_grey_color"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/scheduledetail_againprice_group"
                    android:layout_gravity="bottom"
                    android:padding="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/fuxun_price">
                    <TextView
                        android:textSize="9sp"
                        android:textColor="@color/need_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复训学员 ¥"/>
                    <TextView
                        android:id="@+id/scheduledetail_againprice"
                        android:textSize="9sp"
                        android:textColor="@color/need_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/schedule_depend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bottom_font_color_unclick"
                        android:textSize="14sp"
                        android:text="@string/master_teacher"/>
                    <TextView
                        android:id="@+id/scheduledetail_teachername"
                        android:textColor="@color/bottom_font_color_unclick"
                        android:textSize="14sp"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bottom_font_color_unclick"
                        android:textSize="14sp"
                        android:text="@string/schedule_address"/>
                    <TextView
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/scheduledetail_address"
                        android:textColor="@color/bottom_font_color_unclick"
                        android:textSize="14sp"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_gravity="bottom"
                android:id="@+id/scheduledetail_buy_butt"
                android:layout_width="67dp"
                android:layout_height="30dp"
                android:background="@drawable/green_fillet_background"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="@string/buy_ticket"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/scheduledetail_wv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        </WebView>
        <RelativeLayout
            android:id="@+id/scheduledetail_net_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/top_font_color">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/netoff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/first_loading_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/top_font_color"
            >
            <ImageView
                android:id="@+id/first_loading_iv"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prompt_loading"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/E:/LingXingDao1.0/LingXingDao_Android/app/src/main/res/layout/activity_schedule_detail.xml -->