<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <ImageView
            android:id="@+id/channel_lv_item_iv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/channel_lv_item_title"
                android:textColor="@color/home_news_title_font_color"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end" />
            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:id="@+id/channel_lv_item_des"
                android:textSize="12sp"
                android:textColor="@color/bottom_font_color_unclick"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_marginBottom="8dp"
                android:id="@+id/channel_lv_item_category"
                android:textColor="@color/content_introduction_font_color"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/orange"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp"
                    android:text="@string/pay_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end" />
                <TextView
                    android:id="@+id/channel_lv_item_price"
                    android:textColor="@color/orange"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end" />
                <TextView
                    android:textColor="@color/orange"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp"
                    android:text="@string/subscription_everymouth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
            android:id="@+id/channel_lv_item_butt"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:background="@drawable/green_fillet_background"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="订阅"
            android:gravity="center"
            />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/deep_grey"/>
</LinearLayout><!-- From: file:/E:/LingXingDao1.0/LingXingDao_Android/app/src/main/res/layout/channel_lv_item.xml -->