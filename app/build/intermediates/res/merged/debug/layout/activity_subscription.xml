<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/content_teacher_bg">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_height="43dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/subscription_goback"
            android:layout_centerInParent="true"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/btn_goback"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
                    android:layout_centerInParent="true"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@color/white"
                    app:riv_oval="true"
                    />
                <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
                    android:id="@+id/subscription_teacher_head"
                    android:layout_centerInParent="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    app:riv_oval="true"
                    />
            </RelativeLayout>
            <TextView
                android:textSize="14sp"
                android:id="@+id/subscription_teacher_name"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content_teacher_name_font_color"
                />
            <TextView
                android:textSize="11sp"
                android:id="@+id/subscription_channel_price_range"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content_teacher_name_font_color"
                />
            <RelativeLayout
                android:id="@+id/subscription_issubscrip"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/content_btn_dingyue">
                <TextView
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textSize="12sp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/content_teacher_name_font_color"
                    android:text="@string/subscription_channel"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">
    <TextView
        android:id="@+id/person_line"
        android:layout_width="3dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:background="@color/main_color"/>
    <TextView
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/person_line"
        android:layout_marginLeft="10dp"
        android:textColor="@color/content_teacher_introduce_content_font_color"
        android:text="@string/subscription_teacher_introduce"/>
<LinearLayout
    android:id="@+id/go_group_ll"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/content_shouzhi"/>
    <TextView
        android:layout_gravity="center_vertical"
        android:textColor="@color/teacher_go_font_color"
        android:textSize="13sp"
        android:id="@+id/teacher_guide_go_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/now"
        android:layout_gravity="center_vertical"
        android:textColor="@color/green"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现在就去" />
    <ImageView
        android:id="@+id/go"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/content_go"/>
</LinearLayout>
</RelativeLayout>

    <TextView
        android:lineSpacingMultiplier="1.3"
        android:textSize="13sp"
        android:paddingRight="10dp"
        android:id="@+id/subscription_introduce_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/content_font_color"/>
    <RelativeLayout
        android:paddingRight="10dp"
        android:layout_marginTop="8dp"
        android:id="@+id/extends_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/extends_group_click"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:textSize="12sp"
                android:id="@+id/subscription_introduce_content_click_tv"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content_introduction_font_color"
                android:text="@string/subscription_click_all"/>
            <!-- 点击恢复两行-->
            <ImageView
                android:id="@+id/subscription_introduce_content_click_iv"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/content_view_all"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/french_grey"/>
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@color/light_grey">
       <LinearLayout
           android:id="@+id/free_layout"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:paddingTop="10dp"
           android:orientation="vertical">
           <TextView
               android:textSize="13sp"
               android:id="@+id/free_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:text="@string/subscription_title_free"
               android:textColor="@color/subscripte_green_color"
               />

           <ImageView
               android:layout_marginTop="10dp"
               android:src="@drawable/content_classify"
               android:id="@+id/free_line"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/payed_layout"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:paddingTop="10dp"
           android:orientation="vertical">
           <TextView
               android:textSize="13sp"
               android:id="@+id/payed_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:text="@string/subscription_title_payed"
               android:textColor="@color/subscripte_grey_color"
               />

           <ImageView
               android:layout_marginTop="10dp"
               android:src="@drawable/content_classify"
               android:id="@+id/payed_line"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:visibility="invisible"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/subscribed_layout"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:paddingTop="10dp"
           android:orientation="vertical">
           <TextView
               android:textSize="13sp"
               android:id="@+id/subscribed_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:text="@string/subscription_title_subscribed"
               android:textColor="@color/subscripte_grey_color"/>

           <ImageView
               android:layout_marginTop="10dp"
               android:src="@drawable/content_classify"
               android:id="@+id/subscribed_line"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:visibility="invisible"/>
       </LinearLayout>
   </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:scrollbars="none"
            android:background="@color/white"
            android:id="@+id/subscription_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>
        <RelativeLayout
            android:id="@+id/activity_subscription_loading_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/white">
            <ImageView
                android:id="@+id/activity_subscription_loading_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:clickable="true"
                android:src="@drawable/ic_prompt_loading"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_subscription_net_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:background="@color/top_font_color">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/netoff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_subscription_none"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/top_font_color">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/content_none"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
