<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="18dp"
        android:paddingBottom="28dp">
        <!-- 扩大增加10dp-->
        <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
            android:id="@+id/paywrite_head_teacher_header"
            android:scaleType="fitXY"
            app:riv_oval="true"
            android:layout_width="108dp"
            android:layout_height="108dp" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/master_teacher"/>
                <TextView
                    android:id="@+id/paywrite_head_teachername"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_name"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/paywrite_head_schedulename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_time"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/paywrite_head_scheduletime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_addresss"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/paywrite_head_schedule_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/home_news_readed_font_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/orange"
                    android:text="@string/pay_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/orange"
                    android:id="@+id/paywrite_head_schedule_newprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/paywrite_head_againprice_group"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/home_news_readed_font_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/again_price"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/orange"
                        android:text="@string/pay_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/paywrite_head_schedule_oldprice"
                        android:textSize="13sp"
                        android:textColor="@color/orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/paywrite_head_sitinprice_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/home_news_readed_font_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sitin_price"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/orange"
                        android:text="@string/pay_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/paywrite_head_schedule_sitinprice"
                        android:textSize="13sp"
                        android:textColor="@color/orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/paywrite_head_askprice_group"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/home_news_readed_font_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ask_price"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/orange"
                        android:text="@string/pay_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/paywrite_head_schedule_askprice"
                        android:textSize="13sp"
                        android:textColor="@color/orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


