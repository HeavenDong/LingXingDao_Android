<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/main_color"
        android:orientation="horizontal" >
        <RelativeLayout
            android:id="@+id/forget_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_goback" />

        </RelativeLayout>
        <TextView
            android:id="@+id/forget_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/forget_text1"
            android:textColor="@color/top_font_color"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/forget_title_right"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/title_right"
            android:textColor="@color/top_font_color"
            android:textSize="20sp"
            android:layout_marginRight="3dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            >
         <EditText
             android:id="@+id/forget_numbers"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"
             android:hint="@string/forget_text2"
             android:singleLine="true"
             android:maxLength="11"
             android:textSize="15sp"
             android:textColor="@color/text_color"
             android:textColorHint="@color/hint_color"
             android:background="@null"/>

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            >

            <EditText
                android:id="@+id/forget_send_editcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:hint="@string/forget_text3"
                android:textSize="15sp"
                android:maxLength="6"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:background="@null"/>

            <TextView
                android:id="@+id/forget_send_editcode_tv"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/blue_fillet_background"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="@string/forget_text4"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/white"
                />

        </LinearLayout>
        <View
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">
            <EditText
                android:id="@+id/forget_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:hint="@string/forget_text5"
                android:password="true"
                android:textSize="15sp"
                android:singleLine="true"
                android:maxLength="20"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:background="@null"/>
            <CheckBox
                android:id="@+id/forget_seepw"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/see_psw_check_style"/>
        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/forget_agreement"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/forget_text6"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/main_fillet_background"/>
    </LinearLayout>

</LinearLayout>
