<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="44dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_head"
        android:layout_width="44dp"
        android:layout_height="44dp"
        >
       <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
           android:id="@+id/personal_grid_item_head"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:scaleType="fitXY"
           android:layout_centerHorizontal="true"
           android:src="@drawable/person_teacherhead_default"
           app:riv_oval="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingBottom="3dp"
        android:layout_below="@+id/item_head"
        >
        <TextView
            android:id="@+id/personal_grid_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textSize="11sp"
            android:textColor="@color/grey"


            />
    </RelativeLayout>
</RelativeLayout><!-- From: file:/E:/LingXingDao1.0/LingXingDao_Android/app/src/main/res/layout/my_personal_grid_item.xml -->