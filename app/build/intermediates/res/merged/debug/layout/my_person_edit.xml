<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey_back"
        android:id="@+id/my_rl_main_edit"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/main_color"
            android:orientation="horizontal" >
            <RelativeLayout
                android:id="@+id/my_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_goback" />

            </RelativeLayout>
            <TextView
                android:id="@+id/my_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_title"
                android:textColor="@color/top_font_color"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/forget_title_right"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/title_right"
                android:textColor="@color/top_font_color"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/deep_grey"
                    android:layout_marginTop="15dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/my_person_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:background="@drawable/my_background_selector"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"

                        >
                        <ImageView
                            android:id="@+id/myimg_arraw"
                            style="@style/Arrow"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/my_text10"
                            android:textSize="14sp"
                            android:textColor="@color/content_teacher_font_color"/>
                    </RelativeLayout>
                    <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
                        android:id="@+id/my_avatar_img"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/person_center"
                        app:riv_oval="true" />

                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/deep_grey"
                    android:layout_marginBottom="10dp"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/deep_grey"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="15dp"
                    android:background="@drawable/my_background_selector"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/my_person_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/my_background_selector"
                        >

                        <TextView
                            android:id="@+id/tv_nick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_text11"
                            android:textSize="14sp"
                            android:textColor="@color/content_teacher_font_color"
                            />

                        <TextView
                            android:id="@+id/my_username"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/my_text13"
                            android:textSize="12sp"
                            android:textColor="@color/grey"
                            />
                        <ImageView
                            android:id="@+id/myname_arraw"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            style="@style/Arrow"
                            />

                    </LinearLayout>
                    <View
                        style="@style/Divider"
                        />

                    <RelativeLayout
                        android:id="@+id/my_person_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/my_background_selector"
                        >

                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_text6"
                            android:textSize="14sp"
                            android:textColor="@color/content_teacher_font_color"
                            />
                        <ImageView
                            android:id="@+id/mynickname_arraw"
                            style="@style/Arrow"
                            />

                        <TextView
                            android:id="@+id/my_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/mynickname_arraw"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:textSize="12sp"
                            android:text="@string/my_text13"
                            android:textColor="@color/grey"
                            />
                    </RelativeLayout>
                    <View
                        style="@style/Divider"
                        />
                    <RelativeLayout
                        android:id="@+id/my_person_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_background_selector"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/my_text22"
                            android:textSize="14sp"
                            android:textColor="@color/content_teacher_font_color"/>
                        <ImageView
                            android:id="@+id/name_arraw"
                            android:layout_centerVertical="true"
                            style="@style/Arrow"
                            />

                        <TextView
                            android:id="@+id/my_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/name_arraw"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:textSize="12sp"
                            android:text="@string/my_text13"
                            android:textColor="@color/grey"

                            />
                    </RelativeLayout>
                    <View
                        style="@style/Divider"
                        />
                    <RelativeLayout
                        android:id="@+id/my_person_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_background_selector"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/tv_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/id_card"
                            android:textSize="14sp"
                            android:textColor="@color/content_teacher_font_color"/>
                        <ImageView
                            android:id="@+id/card_arraw"
                            android:layout_centerVertical="true"
                            style="@style/Arrow"
                            />

                        <TextView
                            android:id="@+id/my_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/card_arraw"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:textSize="12sp"
                            android:text="@string/my_text13"
                            android:textColor="@color/grey"

                            />
                    </RelativeLayout>
                    <View
                        style="@style/Divider"
                        />
                    <RelativeLayout
                        android:id="@+id/my_person_agent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_background_selector"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/tv_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/item_agent"
                            android:textSize="14sp"
                            android:textColor="@color/content_teacher_font_color"/>
                        <ImageView
                            android:id="@+id/agent_arraw"
                            android:layout_centerVertical="true"
                            style="@style/Arrow"
                            />

                        <TextView
                            android:id="@+id/my_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/agent_arraw"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:textSize="12sp"
                            android:text="@string/my_text13"
                            android:textColor="@color/grey"

                            />
                    </RelativeLayout>
                    <View
                        style="@style/Divider"
                        />
                    <RelativeLayout
                        android:id="@+id/my_person_editaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_background_selector"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/my_text12"
                            android:textSize="14sp"
                            android:textColor="@color/content_teacher_font_color"/>
                        <ImageView
                            android:id="@+id/myaddress_arraw"
                            android:layout_centerVertical="true"
                            style="@style/Arrow"
                            />

                        <TextView
                            android:id="@+id/my_person_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/myaddress_arraw"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:textSize="12sp"
                            android:text="@string/my_text13"
                            android:textColor="@color/grey"

                            />
                    </RelativeLayout>
                    <View style="@style/Divider" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_text19"
                            android:textSize="14sp"
                            android:textColor="@color/content_teacher_font_color"/>
                        <TextView
                            android:id="@+id/my_person_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey"
                            android:text="18210097124"
                            android:textSize="12sp"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/deep_grey"
                    />

                <RelativeLayout
                    android:id="@+id/my_backlogin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/appback_fillet_background"
                    android:gravity="center_vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="30dp"
                    >

                    <TextView
                        android:id="@+id/backlogin_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_text14"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/user_change_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/ic_prompt_loading"
        android:clickable="true"
        android:visibility="gone"
        />
</RelativeLayout>
