            <!--android:padding="10dp"-->
            <!--android:scaleType="centerCrop" />-->

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/home_detail_wv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        </WebView>
        <RelativeLayout
            android:id="@+id/home_detail_net_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/top_font_color">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/netoff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/first_loading_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/top_font_color"
            >
            <ImageView
                android:id="@+id/first_loading_iv"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prompt_loading"
                />
        </RelativeLayout>
    </RelativeLayout>







