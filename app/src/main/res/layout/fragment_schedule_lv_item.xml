<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="12dp">

        <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
            android:id="@+id/fragment_schedule_lv_item_iv_head"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:scaleType="fitXY"
            app:riv_oval="true"
            />
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1">
                    <!-- -->
                    <RelativeLayout
                        android:id="@+id/background_color_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/backgroundtrans"
                            android:layout_centerInParent="true"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:id="@+id/fragment_schedule_lv_item_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/need_color"
                    />
                <TextView
                    android:layout_marginLeft="1dp"
                    android:textSize="14sp"
                    android:id="@+id/fragment_schedule_lv_item_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/need_color"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:ellipsize="end"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:id="@+id/fragment_schedule_lv_item_tv_content"
                    android:gravity="bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/schedule_color"
                    />
                <LinearLayout
                    android:id="@+id/fragment_schedule_againprice_group"
                    android:layout_gravity="bottom"
                    android:padding="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/fuxun_price">
                    <TextView
                        android:textSize="9sp"
                        android:textColor="@color/need_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复训学员 ¥"/>
                    <TextView
                        android:id="@+id/fragment_schedule_againprice"
                        android:textSize="9sp"
                        android:textColor="@color/need_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/stard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:id="@+id/fragment_schedule_lv_item_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/content_introduction_font_color"
                        />
                    <TextView
                        android:ellipsize="end"
                        android:layout_marginBottom="2dp"
                        android:textSize="14sp"
                        android:id="@+id/fragment_schedule_lv_item_tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/content_introduction_font_color"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/channel_lv_item_butt"
                    android:layout_width="67dp"
                    android:layout_height="30dp"
                    android:background="@drawable/green_fillet_background"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="@string/buy_ticket"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/deep_grey"/>
</LinearLayout>
