<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        style="@style/Divider"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:id="@+id/delect_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/delet_students"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/add_newcustomer_text"
                    android:singleLine="true"
                  />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textSize="12sp"
                    android:textColor="@color/content_font_color"/>
                <TextView
                    android:id="@+id/write_mobile"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/content_font_color"
                    android:singleLine="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id_card"
                    android:textSize="12sp"
                    android:textColor="@color/content_font_color"/>
                <TextView
                    android:id="@+id/write_card"
                    android:layout_toRightOf="@+id/tv2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/content_font_color"
                    android:singleLine="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_agent"
                    android:textSize="12sp"
                    android:textColor="@color/content_font_color"/>
                <TextView
                    android:id="@+id/write_agent"
                    android:layout_toRightOf="@+id/tv3"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/content_font_color"
                    android:singleLine="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/change_write"
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/type_students"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"
                android:textSize="11sp"
                android:singleLine="true"
                android:text="@string/paywrite_item_student"/>
            <ImageView
                android:id="@+id/blue_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/type_students"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow_blue"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
