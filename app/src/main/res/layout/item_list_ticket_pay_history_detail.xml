<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_ticket_detail_unit"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="@color/home_news_time_font_color"
            />
        <TextView
            android:id="@+id/ticket_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="@color/home_news_time_font_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:background="@color/white">
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/text1"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/home_news_detail_detail_font_color"
                android:text="@string/history_ticket_detail_type"
                />
            <TextView
                android:id="@+id/student_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text1"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/home_news_readed_font_color"
                />
             <View
                 style="@style/Divider"
                 android:layout_alignParentBottom="true"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/text2"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/home_news_detail_detail_font_color"
                android:text="@string/price_none"
                />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text2"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/home_news_readed_font_color"
                />
            <View
                style="@style/Divider"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/text3"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/home_news_detail_detail_font_color"
                android:text="@string/name"
                />
            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text3"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/home_news_readed_font_color"
                />
            <View
                style="@style/Divider"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/text4"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/home_news_detail_detail_font_color"
                android:text="@string/phone_number"
                />
            <TextView
                android:id="@+id/moble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text4"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/home_news_readed_font_color"
                />
            <View
                style="@style/Divider"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/text5"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/home_news_detail_detail_font_color"
                android:text="@string/id_card"
                />
            <TextView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text5"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/home_news_readed_font_color"

                />
            <View
                style="@style/Divider"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/text6"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/home_news_detail_detail_font_color"
                android:text="@string/item_agent"
                />
            <TextView
                android:id="@+id/agent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text6"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/home_news_readed_font_color"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
