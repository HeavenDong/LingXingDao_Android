<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_back"
    >
    <!--android:background="@color/white"-->
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pay_history_refresh"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:divider="@null"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderTextColor="@color/ptr_font_color"
        >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <ImageView
        android:id="@+id/pay_history_loading_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/ic_prompt_loading"
        android:clickable="true"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/pay_history__net_message"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:visibility="gone"
        android:background="@color/top_font_color">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:src="@drawable/netoff"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pay_history__not_message"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:visibility="gone"
        android:background="@color/top_font_color">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:src="@drawable/nopayment"
            />
    </RelativeLayout>
</RelativeLayout>