<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/main_color"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/address_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/btn_goback" />

            <TextView
                android:id="@+id/address_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_text1"
                android:textColor="@color/top_font_color"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/address_title_right"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/title_right"
                android:textColor="@color/top_font_color"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                />
        </LinearLayout>


        <View
            style="@style/Divider"
            />

        <ListView
            android:id="@+id/province_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</RelativeLayout>