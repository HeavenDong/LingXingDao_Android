<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
            android:id="@+id/manage_subscribe_item_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/person_center"
            app:riv_oval="true"/>
        <LinearLayout
            android:layout_toRightOf="@+id/manage_subscribe_item_head"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subscribe_lecturer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content_teacher_font_color"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/footer_font_color"
                android:singleLine="true"
                android:textSize="14sp"/>
            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/content_introduction_font_color"
                    android:textSize="13sp"
                    android:text="@string/manage_subscribe_text3"/>

                <TextView
                    android:id="@+id/subscribe_pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/content_introduction_font_color"
                    android:layout_toRightOf="@+id/pay_time"
                    android:singleLine="true"
                    android:layout_marginLeft="3dp"
                    android:textSize="13sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="13sp"
                    android:text="@string/manage_subscribe_text4"/>

                <TextView
                    android:id="@+id/subscribe_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/finish_time"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:textColor="@color/orange"
                    />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/resubscribe_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
        <TextView
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/manage_subscribe_text2"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@drawable/green_fillet_background"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        </LinearLayout>
    </LinearLayout>
    <View
       style="@style/Divider"/>
</LinearLayout>
