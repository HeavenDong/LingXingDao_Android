<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/video_bg">

            <!-- 标题-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_goback"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/btn_goback"/>
                <TextView
                    android:layout_marginRight="48dp"
                    android:gravity="center"
                    android:id="@+id/tv_marquee"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/content_teacher_name_font_color"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/iv_play_center_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_above="@+id/seek"
                android:id="@+id/paly_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_progress"
                    android:textColor="@color/top_font_color"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:gravity="end"
                    android:textColor="@color/top_font_color"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_max"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>
            <SeekBar
                android:progressDrawable="@drawable/seekbar_background_style"
                android:id="@+id/seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_height="wrap_content"
            android:background="@color/content_teacher_name_font_color">
            <RelativeLayout
                android:id="@+id/pre"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="60dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/music_paly_orpause">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/content_pre"/>
            </RelativeLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/music_paly_orpause"
                android:layout_centerHorizontal="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/content_video_suspend_display"/>
            <RelativeLayout
                android:id="@+id/next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/music_paly_orpause">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/content_next"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/left_background_color">
            <View
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/deep_grey"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/deep_grey"/>
        </RelativeLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
                    android:id="@+id/iv_teacher_head"
                    android:layout_centerInParent="true"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:scaleType="fitXY"
                    app:riv_oval="true"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:id="@+id/tv_teacher_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/content_teacher_introduce_content_font_color"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/tv_class_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="@color/home_news_line_color" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/deep_grey"/>
            <TextView
                android:paddingRight="10dp"
                android:id="@+id/tv_class_title"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:lines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:textColor="@color/content_font_color"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/play_loading_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@drawable/ic_prompt_loading" />
</RelativeLayout>