<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/content_lv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="12dp">

    <com.miracleworld.lingxingdao.android.view.myroundedimageview.RoundedImageView
        android:id="@+id/fragment_content_lv_item_iv_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        app:riv_oval="true"
        />
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/fragment_content_lv_item_tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/content_teacher_font_color"
                    />
                <TextView
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"
                    android:textColor="@color/need_color"
                    android:paddingRight="1dp"
                    />
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/fragment_content_lv_item_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/need_color"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/fragment_content_lv_item_tv_introduce"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/content_introduction_font_color"
                />
            <TextView
                android:paddingTop="1dp"
                android:layout_marginBottom="2dp"
                android:textSize="13sp"
                android:id="@+id/fragment_content_lv_item_tv_categorys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/content_teacher_introduce_third"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/deep_grey"/>
</LinearLayout>